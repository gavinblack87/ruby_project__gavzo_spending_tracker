<h2>Transactions</h2>

<div id="transaction-wrapper">

  <% @transactions.each do |transaction| %>

  <div class="transaction">

    <h3><a href="/transactions/<%= transaction.id %>"></a></h3>
    <p>Type: <%= transaction.type.type_name %></p>
    <p>Merchant: <%= transaction.merchant.merch_name %></p>
    <p>Value: <%= transaction.value %></p>
    <p>Date: <%= transaction.trans_date %></p>
    <a href="/transactions/<%= transaction.id %>" class="button">Edit</a>
    <hr>

  </div>

  <% end %>
